@model LukeTest.Models.ViewModels.Member.OrderDetailViewModel

@{
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    var firstOrderDetail = Model.OrderDetails.FirstOrDefault();
}

<h2>@Model.PageTitleText</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => firstOrderDetail.Guid)
            </th>
            <th>
                @Html.DisplayNameFor(model => firstOrderDetail.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => firstOrderDetail.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => firstOrderDetail.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => firstOrderDetail.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => firstOrderDetail.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => firstOrderDetail.IsApproved)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Guid)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(model => item.IsApproved)
                </td>
            </tr>
        }
    </tbody>
</table>