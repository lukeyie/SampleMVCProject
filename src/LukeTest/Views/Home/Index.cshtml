@model LukeTest.ViewModels.HomeViewModel
@{
}

<div class="row" style="margin-top:10px">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="/images/@item.Image" style="width:300px;height:270px" />
                <div class="caption">
                    <h3>@item.ProductName</h3>
                    <h4>@Model.PriceTitleText:@item.Price</h4>
                    <p>
                        <a href="@Url.Action("AddCar","Member")?ProductId=@item.Id" class="btn btn-primary">@Model.AddCartText</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>